        "/session": {
            "get": {
                "description": "Get all sessions owned by the current user or for all users if acting as admin",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "session requiresAuth supportsAdmin"
                ],
